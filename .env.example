# Esence Node Configuration
# Copy to .env and fill in your values

# AI Provider (anthropic | openai | local)
ESENCE_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_key_here
# OPENAI_API_KEY=your_key_here

# Node identity
ESENCE_NODE_NAME=yourname
ESENCE_DOMAIN=localhost

# Capacity donation (% of monthly limit to share with the network)
ESENCE_DONATION_PCT=10

# Interface
ESENCE_PORT=7777

# URL pública del nodo (ngrok, cloudflare tunnel, VPS)
# Ej: https://abc123.ngrok.io  o  https://mi-nodo.example.com
# Vacío = solo accesible en localhost
ESENCE_PUBLIC_URL=
